[colors]
background = #000000
foreground = #D3D7CF

[bar/blkbar]
width = 100%
height = 22
radius = 0
offset-x = 0
offset-y = 0
bottom = false
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 0
font-0 = "Hack:style=Regular:size=9;3"
font-1 = "Font Awesome 5 Brands Regular:style=Regular:size=10;3"
font-2 = "Font Awesome 5 Free Solid:style=Solid:size=10;3"
font-3 = "Font Awesome 5 Free Regular:style=Regular:size=10;3"
modules-left = i3
modules-center = batteryAllert
modules-right = host date xkeyboard eth wlan pulseaudio backLight batteryGrep
tray-position = center
tray-padding-right = 0
tray-background = ${colors.background}
tray-detached = false
;tray-maxsize = 28
tray-maxsize = 0
;edit maxsize to show tray
tray-offset-y = 0
tray-offset-x = 0
cursor-click = pointer
cursor-scroll = ns-resize
wm-name = i3
monitor = ${env:MONITOR:}

[module/bspwm]
type = internal/bspwm
label-focused = %index%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.foreground}
label-focused-padding = 1
label-unfocused = %index%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 1
label-occupied = %index%
label-occupied-padding = 1
label-urgent = %index%!
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.foreground}
label-urgent-padding = 1
label-empty = %index%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
; Only show workspaces on the same output as the bar
;pin-workspaces = true
label-mode-padding = 2
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}
; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}
; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-background = ${module/bspwm.label-unfocused-background}
label-unfocused-foreground = ${module/bspwm.label-unfocused-foreground}
label-unfocused-padding = ${module/bspwm.label-unfocused-padding}
; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}
; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${module/bspwm.label-urgent-foreground}
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}
; Separator in between workspaces
; label-separator = |

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 2
format-disconnected = [x]
; format-connected = <label-connected> <ramp-signal>
format-connected = <ramp-signal>
label-connected = [%local_ip%]
ramp-signal-0 = [1]
ramp-signal-1 = [2]
ramp-signal-2 = [3]
ramp-signal-3 = [4]
ramp-signal-4 = [5]

[module/eth]
type = internal/network
interface = enp1s0
interval = 5
format-connected = <label-connected>
label-connected = [eth %local_ip%]

[module/date]
type = internal/date
interval = 5
date = %d-%b-%Y
time = %H:%M
label = %time% %date%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = [%percentage%]
label-muted = [x]

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[module/batteryAllert]
type = custom/script
exec = bash ~/.config/polybar/script/batteryAllert.sh
interval = 1
format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}
label = %output%

[module/batteryGrep]
type = custom/script
exec = bash ~/.config/polybar/script/batteryGrep.sh
interval = 5
format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/host]
type = custom/script
exec = echo \"$HOSTNAME\"
interval = 60
format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/display]
type = custom/script
exec = dispName=$(xrandr|grep primary|cut -d ' ' -f 1); echo [$dispName]
interval = 5
format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}


[module/backLight]
type = custom/script
exec = bash ~/.config/polybar/script/backLight.sh
interval = 2
format = <label>
format-background = ${color.background}
format-foreground = ${color.foreground}
label = %output%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = scroll lock
format = <label-layout> <label-indicator>
label-layout = [%layout%]
label-indicator = [%name%]

; vem:ft=dosini
